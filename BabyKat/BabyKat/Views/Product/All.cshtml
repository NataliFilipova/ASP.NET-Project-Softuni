@model IEnumerable<ProductModel>


@{
    ViewBag.Title = "All Products";
}

<h2 class="text-center"> @ViewBag.Title</h2>
<hr/>

<div class="text-center row">
    @foreach (var product in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@product.ImageUrl" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@product.Name</h5>
                <p class="mb-0">Price: @product.Price$</p>
                
            </div>

            <form class="input-group-sm" asp-controller="Product" asp-action="RemoveProduct" asp-route-productId="@product.Id">
                <input type="submit" value="Delete" class="fs-6 btn btn-success mb-3 p-2" />
            </form>

           
            <a asp-controller="Post" asp-action="Add" asp-route-productId="@product.Id" class="btn btn-outline-success">Post Review</a>
        </div>
    }
</div>
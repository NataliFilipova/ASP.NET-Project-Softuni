@using BabyKat.Core.Models.Articlesss
@model ArticleWithCommentsModel



<h2 class="text-center"> @ViewBag.Title</h2>
<hr />

<div class="text-center row">
 
    <div class="card mb-3">
        <h3 class="card-header">@Model.Title</h3>
        <div class="card-body-article">

            <img class="article-img" style="width: 80%; "
                 src="@Model.ImageUrl" alt="Post Image">

        </div>

        <div class="card-body">
            <p class="card-text">@Model.Description</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Comments: </h4>

            @foreach (var comment in @Model.Comments)
            {

                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Description: @comment.Description</h4>
                        <h6 class="card-subtitle mb-2 text-muted">Author: @comment.Author</h6>
                       
                    </div>
                </div>
          
                
               
            }
        </div>
    </div>

    <a asp-controller="Comment" asp-action="Add" asp-route-articleId="@Model.Id" class="btn btn-outline-success">Add Comment</a>
</div>



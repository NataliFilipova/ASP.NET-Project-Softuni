@using BabyKat.Core.Models._Product
@model IEnumerable<ProductModel>

@{
    ViewBag.Title = "Favourite Products";
   
}



<div class="text-center row">
    @foreach (var product in Model)
    {

   

        <div class="card col-4  mt-2" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@product.ImageUrl" alt="Book Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@product.Name</h5>
                <p class="mb-0">Price: @product.Price$</p>
                <p class="mb-0">Description: @product.Description</p>

                <a asp-controller="User" asp-action="RemoveProductFromFavourites" asp-route-productId="@product.Id" class="btn btn-outline-success">Remove from favourites</a>

            </div>

            
        </div>
    }
    @if(Model.Count() == 0){
        <h2 class="text-center">It's empty here, go to Categories and check our reviews!</h2>
    }
    
</div>
<body>
    <header>


        <nav class="navbar navbar-expand-lg navbar-custom ">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <img class="headerLogo" src="@Url.Content("~/img/Untitled.png")" alt="Image Logo" />

                        </li>
                        <li class="nav-item">
                            <a class="nav-link">In-depth baby product reviews</a>
                        </li>
                    </ul>


                </div>
            </div>
        </nav>



        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Users" asp-controller="Home" asp-action="Index">Home</a>
                            <span class="visually-hidden">(current)</span>

                        </li>

                        @* <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Product" asp-action="All">All Products</a>
                        </li>*@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Category" asp-action="All">Categories</a>
                        </li>                

                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admin" asp-controller="Article" asp-action="All"> Articles</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Manage Website</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Article" asp-action="Add">Add Article</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Add">Add Product</a>
                                    <a class="dropdown-item" asp-area="Admin" asp-controller="User" asp-action="UserSetting">Manage Users</a>
                                  <div class="dropdown-divider"></div>

                                </div>
                            </li>
                        }
                    </ul>
                    <form class="d-flex" action="/Admin/Product/FindProductByName" method="get">
                        <input class="form-control me-sm-2" type="search" placeholder="Search" id="id" name="id">
                        <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Search</button>
                    </form>


                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>



